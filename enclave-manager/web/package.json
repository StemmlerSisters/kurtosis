{
  "name": "@kurtosis/root",
  "private": true,
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.1",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "framer-motion": "^10.16.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "craco": "^0.0.3",
    "dotenv-cli": "^6.0.0",
    "lerna": "^5.6.2",
    "prettier": "3.0.3",
    "prettier-plugin-organize-imports": "^3.2.3",
    "react-scripts": "5.0.1",
    "typescript": "^4.4.2"
  },
  "scripts": {
    "cleanInstall": "rm -rf node_modules; rm -rf packages/*/node_modules; yarn install; lerna init",
    "clean": "lerna run clean",
    "prebuild": "rm -rf ../../engine/server/webapp",
    "postbuild": "cp -r packages/app/build/ ../../engine/server/webapp",
    "build": "lerna run --stream build",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write",
    "start": "lerna run --stream --scope @kurtosis/emui-app start",
    "start:cloud": "lerna run --stream --scope @kurtosis/emui-app start:cloud",
    "start:prod": "lerna run --stream --scope @kurtosis/emui-app start:prod",
    "test": "lerna run test"
  },
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  }
}
